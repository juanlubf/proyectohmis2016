<?xml version="1.0" encoding="UTF-8"?>
<project name="HMIS2016" default="Empaquetado">
	<property name="buildDir" value="build"/>
	<property name="srcDir" value="src"/>
	<property name="testDir" value="tests"/>
    <property name="host" value="localhost"/>
    <property name="db" value="webapp"/>
    <property name="user" value="root"/>
    <property name="passw" value="laclavedemysql"/>
	<property name="sql.file" value="src/sql/Creacion bd.sql"/>
 
 	<target name="Inicio">
		<echo msg="Creando base de datos"/>
		<exec command="mysql -u${user} -p${passw} -h${host} -e &quot;source ${sql.file}&quot;"/>
	</target>

	<target name="Pruebas unitarias" depends="Inicio">
		<echo msg="Comenzando pruebas"/>
		<phpunit haltonfailure="true" haltonerror="true"
				 printsummary="true">
			<batchtest>
				<fileset dir="${testDir}">
					<include name="*Test.php"/>
				</fileset>
			</batchtest>
		</phpunit>
	</target>

	<target name="Cobertura" depends="Pruebas unitarias">
		<echo msg="Calculando cobertura"/>
		<mkdir dir="reports"/>

		<coverage-setup database="reports/coverage.db">
			<fileset dir="${srcDir}">
				<include name="**/*.php"/>
			</fileset>
		</coverage-setup>

		<phpunit codecoverage="true" printsummary="true">
			<formatter type="xml" todir="reports"/>
			<batchtest>
				<fileset dir="${testDir}">
					<include name="**/*Test.php"/>
				</fileset>
			</batchtest>
		</phpunit>

		<mkdir dir="reports/tests"/>
		<mkdir dir="reports/coverage"/>

		<phpunitreport infile="reports/testsuites.xml"
					   format="frames" todir="reports/tests"/>
		<coverage-report outfile="reports/coverage.xml">
			<report toDir="reports/coverage" title="Phing" usesorttable="true"/>
		</coverage-report>
	</target>

	<target name="phpDocumentor" depends="Cobertura">
		<mkdir dir="docs"/>
		<phpdoc2 destdir="docs" title="Phing API Documentation" >
			<fileset dir="reports">
				<include name="**/*.php"/>
			</fileset>
		</phpdoc2>
	</target>

	<target name="Empaquetado" depends="phpDocumentor">
		<echo msg="Comenzando empaquetado"/>
		<zip destfile="build/phpfiles.zip">
			<fileset dir="${srcDir}">
				<include name="**/*.php"/>
			</fileset>
		</zip>
	</target>

</project>